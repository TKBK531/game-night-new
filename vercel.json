{
    "version": 2,
    "buildCommand": "npm run vercel-build",
    "outputDirectory": "dist/public",
    "functions": {
        "server/index.ts": {
            "runtime": "@vercel/node"
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/index.ts"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "/server/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/dist/public/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}