{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist/public"
            }
        }
    ],
    "functions": {
        "api/*.ts": {
            "runtime": "@vercel/node@3"
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/dist/public/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}